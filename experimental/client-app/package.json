{
  "name": "emblem-giving-app",
  "description": "Webcomponent app-shell following open-wc recommendations",
  "license": "MIT",
  "author": "app-shell",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": " web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "lint:css": "stylelint \"src/**/*.js\"",
    "server": "node server/proxy.js",
    "start": "web-dev-server"
  },
  "dependencies": {
    "@bundled-es-modules/axios": "^0.21.1",
    "@material/mwc-button": "^0.25.3",
    "@material/mwc-icon-button": "^0.25.3",
    "@material/mwc-tab": "^0.25.3",
    "@material/mwc-tab-bar": "^0.25.3",
    "@material/mwc-top-app-bar": "^0.25.3",
    "@reduxjs/toolkit": "^1.7.2",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.0.2",
    "pwa-helpers": "^0.9.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@web/dev-server": "^0.1.30",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "cors": "^2.8.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.3",
    "http-proxy-middleware": "^2.0.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "morgan": "^1.10.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.3",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.6.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
