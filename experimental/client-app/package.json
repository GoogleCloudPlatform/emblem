{
  "name": "emblem-giving-app",
  "description": "Emblem giving serverless application following open-wc recommendations",
  "license": "MIT",
  "author": "Google LLC",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": " web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "lint:css": "stylelint \"src/**/*.js\"",
    "server": "node server/proxy.js",
    "start": "THEME=cymbal NODE_ENV=development web-dev-server",
    "dev": "run-p server start"
  },
  "dependencies": {
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-tab": "^0.27.0",
    "@material/mwc-tab-bar": "^0.27.0",
    "@material/mwc-top-app-bar": "^0.27.0",
    "@reduxjs/toolkit": "^1.8.4",
    "@vaadin/router": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6",
    "lit": "^2.3.1",
    "morgan": "^1.10.0",
    "pwa-helpers": "^0.9.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "next",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.11.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "stylelint": "^14.10.0",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
