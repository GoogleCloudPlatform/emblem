{
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "experimental/**"
  ],
  "rangeStrategy": "pin",
  "schedule": "before 10am every 3 weeks on Monday", 
  "packageRules": [
    {
      "paths": [
        "client-libs/"
      ],
      "rangeStrategy": "replace"
    },
    {
      "groupName": "OpenTelemetry",
      "matchPackageNames": ["opentelemetry-*"]
    },
  ]
}
